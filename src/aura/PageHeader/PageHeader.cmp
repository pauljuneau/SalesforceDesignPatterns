<aura:component description="Provides a Page Header for the Race Tracker App" implements="flexipage:availableForAllPageTypes">
    <aura:attribute description="Optional title that appears in the Page Header" name="title" type="String" access="global" default="Race Tracker" />
	<ltng:require styles="/resource/slds100/assets/styles/salesforce-lightning-design-system.min.css"/>
    
   <div class="slds">
       <div class="slds-page-header" >
           <p class="slds-page-header__title" title="{!v.title}" >{!v.title}</p>
       </div>
    </div>
    
</aura:component>